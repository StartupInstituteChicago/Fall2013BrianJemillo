<%= form_for @restaurant, :html => {:multipart => true, 'data-validate' => 'parsley' } do |f| %>
  <% if @restaurant.errors.any? %>
  <div id="errorExplanation">
    <h2><%= pluralize(@restaurant.errors.count, "error") %> prohibited
      this restaurant from being saved:</h2>
    <ul>
    <% @restaurant.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name, 'data-required' => true, 'data-notblank' => true, 'data-rangelength' => '[5,30]', 'data-trigger' => 'focusin focusout change blur' %>
  </p>
 
  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description, 'data-required' => true, 'data-notblank' => true, 'data-trigger'=> 'focusin focusout change blur' %>
  </p>
 
 <p>
    <%= f.label :full_address %><br>
    <%= f.text_field :full_address, 'data-required' => true, 'data-notblank' => true, 'data-trigger' => 'focusin focusout change blur' %>
  </p>
  
  <p>
    <%= f.label :phone_number %><br>
    <%= f.text_field :phone_number, 'data-required' => true, 'data-notblank' => true, 'data-regexp' => '^[0-9\-\(\)\s]*$', 'data-trigger' => 'focusin focusout change blur' %>
  </p>

  <p>
  <% if @restaurant.image.present? %> 
  <p><%= image_tag @restaurant.image_url.to_s, :size => '400x300' %></p>
  <% end %>
  <%= f.label 'Select Image' %><br>
	<%= f.file_field :image %>
  <%= f.hidden_field :image_cache %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>