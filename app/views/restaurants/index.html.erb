<h1>Listing Restaurants</h1>
<%= link_to 'New Restaurant', new_restaurant_path %>
<table>
  <tr>
    <th>Id:</th>
    <th>Name</th>
    <th>Description</th>
	  <th>Full Address</th>
    <th>Phone Number</th>
	  <th>Image</th>
    <th colspan='3'>Options</th>
  </tr>
  <% @restaurants.each do |restaurant| %>
    <tr>
	  <td><%= restaurant.id %></td>
      <td><%= restaurant.name %></td>
      <td><%= restaurant.description %></td>
	  <td><%= restaurant.full_address %></td>
      <td><%= restaurant.phone_number %></td>
	  <td><%= image_tag restaurant.image_url.to_s, :size => '35x35' %></td>
	  <td><%= link_to 'Show', restaurant_path(restaurant) %></td>
    <% if restaurant.owner == current_owner %>
	  <td><%= link_to 'Edit', edit_restaurant_path(restaurant) %></td>
	  <td><%= link_to 'Destroy', restaurant_path(restaurant), method: :delete, data: {confirm: 'Are you sure?'} %></td>
    <% end %>
    </tr>
  <% end %>
</table>